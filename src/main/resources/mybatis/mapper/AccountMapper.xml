<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="coffeeshop.mapper.AccountMapper">
	<resultMap id="AccountResult" type="Account">
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="enabled" property="enabled" />
		<association property="role" javaType="Role" column="role"
			select="coffeeshop.mapper.RoleMapper.findRoleByName">
		</association>
	</resultMap>

	<select id="findAccountByUsername" parameterType="String"
		resultMap="AccountResult">
		SELECT * FROM "account" WHERE username = #{username}
	</select>

	<insert id="insert" parameterType="Account">
		INSERT INTO
		"account"(username,password,enabled,role) VALUES(#{username},
		#{password}, #{enabled}, #{role.roleName})
	</insert>

	<update id="updateEnabled" parameterType="map">
		UPDATE "account" SET
		enabled =#{enabled} WHERE username =#{username}
	</update>

	<update id="updatePassword" parameterType="map">
		UPDATE "account" SET
		password =#{password} WHERE username =#{username}
	</update>

</mapper>