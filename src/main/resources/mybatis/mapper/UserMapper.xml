<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="coffeeshop.mapper.UserMapper">
	<resultMap id="UserResult" type="User">
		<result column="fullname" property="fullName" />
		<result column="address" property="address" />
		<result column="phone_number" property="phoneNumber" />
		<result column="email" property="email" />
		<result column="token" property="token" />
		<result column="expiry_date" property="expiryDate" />
		<association column="username" property="account"
			javaType="Account" select="coffeeshop.mapper.AccountMapper.findAccountByUsername">
		</association>
	</resultMap>

	<select id="findByUsername" resultMap="UserResult">
		SELECT * FROM "user"
		WHERE
		username =#{username}
	</select>
	<select id="findByEmail" resultMap="UserResult">
		SELECT * FROM "user"
		WHERE
		email =#{email}
	</select>
	<select id="findByToken" resultMap="UserResult">
		SELECT * FROM "user"
		WHERE
		token =#{token}
	</select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO
		"user"(username, fullname, address,
		phone_number, email,
		token,
		expiry_date)
		VALUES(#{account.username},
		#{fullName}, #{address},
		#{phoneNumber}, #{email}, #{token},
		#{expiryDate})
	</insert>

	<update id="resetToken" parameterType="map">
		UPDATE "user" SET token
		=#{token}, expiry_date =#{date} WHERE email =#{email}
	</update>
</mapper>